{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/main",  // Ensure this points to your `main` executable
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "externalConsole": false,
            "preLaunchTask": "build",  // Optional: Make sure you have a build task to compile before launching
            "sourceLanguages": ["cpp"],
            "miDebuggerPath": "/usr/bin/lldb"  // Use the path to lldb on your system
        }
    ]
}

  

